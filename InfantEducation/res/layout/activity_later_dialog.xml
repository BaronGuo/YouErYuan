<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/alert_later_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2EB976"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/title_xiangxi"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/alert_later_dialog_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_later_dialog_text"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/later_dialog_dis"
        android:layout_below="@id/alert_later_dialog_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/btn_selector"
        android:onClick="btnClick"
        android:text="@string/btn_dialog_dismiss" />

</RelativeLayout>