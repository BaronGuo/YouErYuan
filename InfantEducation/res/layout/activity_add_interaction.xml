<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg" >
    
    <RelativeLayout
        android:id="@+id/titlebar_addinter_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2EB976" >

        <ImageView
            android:id="@+id/titlebar_addinter_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:onClick="ivClick"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/addinter_title"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="24sp" />
        
       <ImageView
            android:id="@+id/titlebar_addinter_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:onClick="ivClick"
            android:src="@drawable/sign_up_add_check" /> 
    </RelativeLayout>
    
    <EditText
        android:id="@+id/addinter_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:hint="@string/enter_interaction_hint"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:textSize="18sp"
        android:maxLines="10"
        android:enabled="true"
        android:gravity="top"
        android:layout_below="@id/titlebar_addinter_rl" />
    

</RelativeLayout>
