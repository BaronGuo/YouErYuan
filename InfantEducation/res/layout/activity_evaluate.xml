<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2EB976" >

        <ImageView
            android:id="@+id/titlebar_eva_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_evaluate"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/evaluate_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/xuanzepingjiajiaoshi"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.wzt.sun.infanteducation.view.CustomerSpinner
            android:id="@+id/evaluate_spinner_teacher"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="5sp"
            android:background="@drawable/bg_spinner" >
        </com.wzt.sun.infanteducation.view.CustomerSpinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/evaluate_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/shifoumanyi"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.wzt.sun.infanteducation.view.CustomerSpinner
            android:id="@+id/evaluate_spinner_star"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="5sp"
            android:background="@drawable/bg_spinner" >
        </com.wzt.sun.infanteducation.view.CustomerSpinner>
    </LinearLayout>

    <Button
        android:id="@+id/btn_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_titlebar_shape"
        android:onClick="btnClick"
        android:paddingBottom="6dp"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:paddingTop="6dp"
        android:text="@string/btn_sure"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>