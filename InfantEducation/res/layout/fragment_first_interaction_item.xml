<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="5dp" >

    <View
        android:id="@+id/view_gray_row1"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_below="@id/view_gray_row1"
        android:id="@+id/ffii_ll_row1"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ffii_iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:padding="4dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/ffii_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/ffii_iv_head"
            android:text="11111"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ffii_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ffii_tv_name"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/ffii_iv_head"
            android:text="2015-08-24"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ffii_ll_row1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ffii_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="111dsdfdsfdhgsdfhsdfhsdfhssdfgsdgsdfsdffgf1111111111111111111111111111111111111111111111å¥½"
            android:textSize="18sp" />

        <com.wzt.sun.infanteducation.view.NoScrollGridView
            android:id="@+id/ffii_tv_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnWidth="70dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:stretchMode="columnWidth"
            android:layout_marginTop="6dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:verticalSpacing="3dp" >
            
        </com.wzt.sun.infanteducation.view.NoScrollGridView>
        
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="6dp"
        android:background="@color/gray" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:id="@+id/ffii_ll_btn_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/messages_comment_icon" />
                
                <TextView
                    android:id="@+id/ffii_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:text="11" />
                
            </LinearLayout>
            
            <View
                android:layout_width="0.5px"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/gray" />
            
            <LinearLayout
                android:id="@+id/ffii_ll_btn_zan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <com.wzt.sun.infanteducation.view.PraiseView
                    android:id="@+id/praise_view_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <TextView
                    android:id="@+id/ffii_tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:text="11" />
                
            </LinearLayout>
            
        </LinearLayout>
        
        <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/gray" /> -->
        
    </LinearLayout>

</RelativeLayout>