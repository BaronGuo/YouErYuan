<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/inform_relayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2EB976" >
        
        <ImageView
            android:id="@+id/titlebar_home_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_home_work_title"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/home_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/inform_relayout"
        android:textSize="22sp" />
    
    <TextView
        android:id="@+id/home_work_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:layout_below="@id/home_work_title"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/home_work_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/home_work_date"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2" />
    
    <TextView
        android:id="@+id/home_work_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_work_info"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="18sp" />
    

</RelativeLayout>
