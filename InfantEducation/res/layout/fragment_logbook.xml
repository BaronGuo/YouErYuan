<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/logbook_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp" >
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/logbook_date_text" />
        
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/logbook_am_text" />
        
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/logbook_pm_text" />
        
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/logbook_beizhu_text" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/logbook_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logbook_title"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" >
        
    </ListView>
    

</RelativeLayout>
